{
  "name": "halo-theme-hshan",
  "version": "1.0.0",
  "description": "> 原始主题见[Subtle Galaxy](https://github.com/GalaxySuze/gridea-theme-subtle-galaxy)，原设计自Ghost Subtle主题，感谢做出这么漂亮的主题， 在原主题上面新增日志页面和目录以及一些个性化配置",
  "scripts": {
    "build": "vite build && npm run build-js",
    "build-main": "uglifyjs templates/assets/media/scripts/main.js -o templates/assets/media/scripts/main.min.js",
    "build-post": "uglifyjs templates/assets/media/scripts/post.js -o templates/assets/media/scripts/post.min.js",
    "build-plugin": "uglifyjs templates/assets/media/scripts/plugins.js -o templates/assets/media/scripts/plugins.min.js",
    "build-night-mode": "uglifyjs templates/assets/media/scripts/night-mode.js -o templates/assets/media/scripts/night-mode.min.js",
    "build-utils": "uglifyjs templates/assets/media/scripts/utils.js -o templates/assets/media/scripts/utils.min.js",
    "build-js": "npm run build-main && npm run build-post && npm run build-plugin && npm run build-night-mode && npm run build-utils",
    "prettier": "prettier --write './src/**/*.{js,ts,css,json,ml,yaml,html}' './templates/**/*.html'",
    "deploy": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hshanx/halo-theme-hshan.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hshanx/halo-theme-hshan/issues"
  },
  "homepage": "https://github.com/hshanx/halo-theme-hshan#readme",
  "devDependencies": {
    "@types/node": "^17.0.36",
    "@types/nprogress": "^0.2.0",
    "autoprefixer": "^10.4.7",
    "less": "^3.13.1",
    "postcss": "^8.4.14",
    "prettier": "^2.8.7",
    "rimraf": "^3.0.2",
    "rollup-plugin-watch": "^1.0.1",
    "typescript": "^4.7.2",
    "uglify-js": "^3.8.0",
    "vite": "^2.9.9"
  },
  "dependencies": {
    "nprogress": "^0.2.0"
  }
}
